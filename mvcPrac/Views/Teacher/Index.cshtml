@model IEnumerable<mvcPrac.Models.Teacher>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Teacher List</h2>
        </div>
        <a asp-controller="Teacher" asp-action="New" class="btn btn-primary">Add New Teacher</a>
    </div>
    <form asp-controller="Teacher" asp-action="Index">
        <p>
            Name: <input type="text" name="searchString" />
            <input type="submit" value="Filter">
        </p>
    </form>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Id</th>
                    <th> Name</th>
                    <th> Joining Date</th>
                    <th> Birth Date</th>
                    <th> Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj1 in Model)
                {
                    <tr>
                        <td>@obj1.ID</td>
                        <td>@obj1.name</td>
                        <td>@obj1.joindate</td>
                        <td>@obj1.birthdate</td>
                        <td>
                            <a asp-controller="Teacher" asp-action="Edit" asp-route-subjectid="@obj1.ID"
                        class="btn btn-primary">Edit</a>
                            <a asp-controller="Teacher" asp-action="Delete" asp-route-subjectid="@obj1.ID"
                        class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No subject details.</p>
    }
</div>
